      CKAN__CORS__ORIGIN_ALLOW_ALL: "True"
      CKAN__HARVEST__MQ__TYPE: redis
      CKAN__LOCALE_DEFAULT: en
      CKAN__RESOURCE_PROXY__MAX_FILE_SIZE: "100000000"
      CKAN__SITE_TITLE: x demo
      CKAN__STORAGE_PATH: /tmp
